{
    "compilerOptions": {
        // "module": "esnext",
        "lib": ["esnext"],
        "target": "es5",
        "downlevelIteration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "declarationDir": "build",
        "declarationMap": true,
        "noImplicitUseStrict": true
    },
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules",
        "test.*"
    ]
}