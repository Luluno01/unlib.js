{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [ "esnext" ],
        "target": "es2017",
        "downlevelIteration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "declaration": true,
        "declarationDir": "build",
        "declarationMap": true,
        "noImplicitUseStrict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test.*"
    ]
}